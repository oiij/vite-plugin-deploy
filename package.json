{
  "name": "@oiij/vite-plugin-deploy",
  "type": "module",
  "version": "0.0.3",
  "description": "A Vite plugin for deploying static files use ssh2-sftp-client",
  "author": "oiij",
  "license": "MIT",
  "homepage": "https://github.com/oiij/vite-plugin-deploy",
  "repository": {
    "type": "git",
    "url": "git@github.com:oiij/vite-plugin-deploy.git"
  },
  "bugs": "https://github.com/oiij/vite-plugin-deploy/issues",
  "keywords": [
    "vite-plugin-deploy",
    "ssh2-sftp-client"
  ],
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "package.json"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && npm publish",
    "awe": "pnpx are-we-esm",
    "nmi": "pnpx node-modules-inspector",
    "start": "esno src/index.ts",
    "test": "vitest",
    "update:deps": "taze -w && pnpm i",
    "type:check": "tsc --noEmit",
    "cz": "czg",
    "commit": "git pull && git add -A && pnpm cz && git push",
    "link": "pnpm link --global",
    "preinstall": "npx only-allow pnpm"
  },
  "peerDependencies": {
    "vite": "^7.0.4"
  },
  "dependencies": {
    "@types/ssh2-sftp-client": "^9.0.6",
    "ora": "^9.1.0",
    "ssh2-sftp-client": "^12.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@oiij/tsconfig": "^0.0.1",
    "@types/node": "^25.2.0",
    "@vitest/ui": "^4.0.18",
    "bumpp": "^10.4.0",
    "commitlint": "^20.4.1",
    "cz-git": "^1.12.0",
    "czg": "^1.12.0",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "esno": "^4.8.0",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.9.2",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm type:check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
